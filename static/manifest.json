{
  "manifest_version": 3,
  "name": "EDA Browser Extension",
  "version": "1.0",
  "description": "EDA stuff in the browser",
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://*.eda.dev/*", "http://localhost/*", "http://127.0.0.1/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "eda-browser-connector@ls.cd",
      "strict_min_version": "109.0",
      "data_collection_permissions": {
        "allowed": false,
        "required": ["none"]
      }
    }
  }
}
