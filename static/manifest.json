{
  "manifest_version": 3,
  "name": "EDA Browser Extension",
  "version": "1.6",
  "description": "Allow external web apps to consume the Nokia EDA REST API",
  "permissions": ["storage"],
  "host_permissions": [
    "https://eda.dev/*",
    "https://*.eda.dev/*",
    "https://*/core/httpproxy/v1/keycloak/realms/eda/protocol/openid-connect/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "https://eda.dev/*",
        "https://*.eda.dev/*",
        "https://*/core/httpproxy/v1/keycloak/realms/eda/protocol/openid-connect/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "eda-browser-connector@ls.cd",
      "strict_min_version": "109.0",
      "data_collection_permissions": {
        "allowed": false,
        "required": ["none"]
      }
    }
  }
}
